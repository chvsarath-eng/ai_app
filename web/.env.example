# ============================================
# Environment Variables for img2x-web
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Story Generation Service (Cloud Run API)
# ============================================

# URL of the story generation Cloud Run service
STORY_SERVICE_URL=https://story-api-XXXXXX.us-central1.run.app

# Audience for ID token (usually same as STORY_SERVICE_URL)
STORY_SERVICE_AUDIENCE=https://story-api-XXXXXX.us-central1.run.app

# ============================================
# Google Cloud Authentication
# Choose ONE of the following methods:
# ============================================

# Option 1: JSON credentials as string (used in Cloud Run via Secret Manager)
# STORY_INVOKER_CREDENTIALS_JSON={"type":"service_account",...}

# Option 2: Path to service account JSON file (for local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/invoker.json
STORY_INVOKER_CREDENTIALS_PATH=/path/to/invoker.json

# ============================================
# SMTP Email Configuration (for contact form)
# ============================================

SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=team@img2x.com
SMTP_PASS=your-smtp-password

# Optional: Override sender/recipient
# CONTACT_TO=team@img2x.com
# CONTACT_FROM=team@img2x.com

# ============================================
# Optional: Development Settings
# ============================================

# NODE_ENV=development
# PORT=3000
